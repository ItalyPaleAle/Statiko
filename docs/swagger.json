{
    "swagger": "2.0",
    "info": {
        "description": "{{.Description}}",
        "title": "Platform node APIs",
        "contact": {},
        "license": {},
        "version": "1.0"
    },
    "host": "{{.Host}}",
    "basePath": "{{.BasePath}}",
    "paths": {
        "/adopt": {
            "post": {
                "description": "The Platform Controller node can invoke this method to \"adopt\" the node.\nThis action is destructive as will delete all existing sites and applications, and reset the node to a clean state.",
                "produces": [
                    "application/json"
                ],
                "summary": "Tells the application to adopt the node, initializing it to a clean state",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/actions.Message"
                        }
                    },
                    "500": {}
                }
            }
        },
        "/site": {
            "post": {
                "description": "Creates a new site in the local web server and configures it with the default app",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Creates a new site",
                "parameters": [
                    {
                        "description": "Domain name",
                        "name": "domain",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/string"
                        }
                    },
                    {
                        "description": "TLS Certificate name in the Key Vault",
                        "name": "tlsCertificate",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/string"
                        }
                    }
                ],
                "responses": {
                    "500": {}
                }
            }
        },
        "/status": {
            "get": {
                "description": "Returns an object listing the sites currently running and the apps deployed.\nThis route is designed and optimized for periodic health-checks too.",
                "produces": [
                    "application/json"
                ],
                "summary": "Returns the status and health of the node",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/actions.NodeStatus"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "actions.Message": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            }
        },
        "actions.NodeApps": {
            "type": "object",
            "properties": {
                "appName": {
                    "type": "string"
                },
                "appVersion": {
                    "type": "string"
                },
                "domain": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "updated": {
                    "type": "string"
                }
            }
        },
        "actions.NodeStatus": {
            "type": "object",
            "properties": {
                "apps": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/actions.NodeApps"
                    }
                },
                "health": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/actions.SiteHealth"
                    }
                }
            }
        },
        "actions.SiteHealth": {
            "type": "object",
            "properties": {
                "domain": {
                    "type": "string"
                },
                "error": {
                    "type": "string"
                },
                "size": {
                    "type": "integer"
                },
                "status": {
                    "type": "integer"
                },
                "time": {
                    "type": "string"
                }
            }
        }
    }
}